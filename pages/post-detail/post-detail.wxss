/* pages/post-detail/post-detail.wxss */
@import "../../lib/style/font.wxss";

.post-title {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.post-title > text {
  position: relative;
  left: 30rpx;
}

.user {
  position: relative;
  left: 30rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
}

.text-content {
  padding: 0 30rpx;
}

.post-list, .user {
  width: 100%;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-info-text {
  display: inline-block;
  padding-left: 16rpx;
}

.user-info-text .username, .user-info-text .posttime {
  display: block;
}

.user-info-text .username {
  font-weight: bold;
}

.user-info-text .posttime {
  font-size: 30rpx;
  font-weight: 500;
}

.post-images-container {
  border-bottom: 1px solid #cccccc;
  display: flex;
  /* flex-direction: column; */
  flex-wrap: wrap;
  justify-content: left;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
}

.post-images-container image {
  width: 80%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.like-comments {
  height: 50rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.like-comments text {
  padding-right: 40rpx;
  font-size: 34rpx;
}

.like-comments, .like-peaples {
  border-bottom: 1px solid #cccccc;
}

.like-peaples {
  font-size: 30rpx;
  color: #000000;
}

.like-peaples > text {
  color: #343223;
}

.like-peaples {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.comments {
  width: 95%;
  padding-bottom: 50rpx;
  background-color: #cdcdcd;
  border: 5rpx solid #cdcdcd;
  border-radius: 20rpx;
  margin: 0 auto;
}

.triangle {
  content: '';
  width: 0rpx;
  height: 0rpx;
  border: 50rpx solid #cdcdcd;
  margin-top: -50rpx;
  margin-left: 50rpx;
  border-color: transparent transparent #cdcdcd;
}

.comment {
  margin-left: 20rpx;
  padding-top: 0rpx;
}

.comment .comment-username {
  color: #1296db;
}

#comment-title {
  width: 100%;
  position:relative;
  padding: 10rpx 10rpx 10rpx 30rpx;
  border-bottom: 1rpx solid #cccccc;
  height: 40rpx;
  line-height: 40rpx;
}

#reply-section {
  /* display: none; */
  background: #cccccc;
  position: fixed;
  width: 80%;
  top: 300rpx;
  left: 10%;
  border-radius: 2%;
}

#reply-section textarea {
  width: 90%;
  padding: 20rpx;
  border-bottom: 1px solid #fff;
}

#reply-section .close {
  position: relative;
  left: 2%;
}

#reply-section .reply {
  margin-top: 10rpx;
  position: relative;
  left: 50%;
}

.comment-input {
  width: 100%;
  background: #cccccc;
  position: fixed;
  bottom: 0rpx;
}
