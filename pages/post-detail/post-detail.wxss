/* pages/post-detail/post-detail.wxss */
@import "../../lib/style/font.wxss";
.post-title {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.post-title > text {
  position: relative;
  left: 30rpx;
}

.user {
  position: relative;
  left: 30rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
}

.text-content {
  padding: 0 30rpx;
}

.post-list, .user {
  width: 100%;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-info-text {
  display: inline-block;
  padding-left: 16rpx;
}

.user-info-text .username, .user-info-text .posttime {
  display: block;
}

.user-info-text .username {
  font-weight: bold;
}

.user-info-text .posttime {
  font-size: 30rpx;
  font-weight: 500;
}


.post-images-container {
  width: 100%;
  border-bottom: 1px solid #cccccc;
  display: flex;
  /* flex-direction: column; */
  flex-wrap: wrap;
  justify-content: left;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
}

.post-images-container image {
  width: 80%;
}

.like-comments {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.like-comments text {
  padding-right: 40rpx;
  font-size: 34rpx;
}

.like-comments, .like-peaples {
  border-bottom: 1px solid #cccccc;
}

.like-peaples {
  font-size: 30rpx;
  color: #000000;
}

.like-peaples > text {
  color: #343223;
}

.like-peaples {
  width: 100%;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.comments {
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
