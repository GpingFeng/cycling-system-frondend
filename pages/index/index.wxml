<!--index.wxml-->
<view class="container">
  <!-- 轮播图 -->
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{background}}" wx:key="index">
        <swiper-item>
          <view class="swiper-item">
            <image src="{{ item.src  }}" ></image>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 帖子动态 -->
  <view class="post-title">
    <text>帖子动态</text>
  </view>
  <include src="../common/wxml/line.wxml" />
  <view
    class="post-list" 
    wx:for="{{ postList }}" 
    wx:for-item="post" 
    wx:key="index">
    <view class="user">
      <image src="{{ post.avatar }}" class="avatar"></image>
      <view class="user-info-text">
        <text class="username">{{ post.username }}</text>
        <text class="posttime">{{ post.posttime }}</text>
      </view>
    </view>
    <view bindtap="goPostItem">
      <view class="text-content">{{ post.textContent }}</view>
      <view class="post-images-container" wx:if="{{ post.images.length != 0 }}">
        <image src="{{ post.images[0] }}" mode="aspectFill" ></image>
      </view>
    </view>
    <view class="like-comments">
      <text class="like iconfont icon-appreciate_light">{{ post.likePeaple.length }}</text>
      <text class="comment iconfont icon-comment_light">{{ post.comments.length }}</text>
    </view>
    <include src="../common/wxml/line.wxml" />
  </view>
  <!-- 点击添加帖子 -->
  <view class="add-button" bindtap="createPostBtn">
    <text class="iconfont icon-round_add"></text>
  </view>
</view>
