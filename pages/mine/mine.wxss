/* pages/mine/mine.wxss */
@import "../../lib/style/font.wxss";

.mine-info {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 400rpx;
  margin-bottom: 50rpx;
  background: #1296db;
}

.mine-info .user-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.mine-association {
  border-top: 1px solid #cccccc;
  margin-top: 100rpx;
}

.user-username {
  margin-top: 10rpx;
}

.navigation:first {
  margin-top: 100rpx;
}

.navigation {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 56rpx;
  padding-left: 40rpx;
  border-bottom: 1px solid #cccccc;
}

.mine-posts {
  border-top: 1px solid #cccccc;
}

.navigation .text {
  padding-left: 30rpx;
}